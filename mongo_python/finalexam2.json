use enron
db.messages.aggregate([
   {"$unwind":"$headers.To"},
   {$project:
     {
       _id:0,
       sender:"$headers.From",
       recepient:"$headers.To",
     }
   },
   {$group:
       {
         _id:{sender:"$sender",rec:"$recepient"},
         count:{$sum:1},
       }
   },
   {$sort:{"count":-1}},
   {$limit:10},
])
